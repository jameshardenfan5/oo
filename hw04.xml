<?xml version="1.0"?>

<project name="Antapp" basedir="." default="clean">

	<property environment="env" />
	
	<path id="classpath">
		<pathelement path="${env.JUNIT}" />
		<pathelement path="bin" />
		<pathelement path="test/bin" />
	</path>

	<target name="init">
		<mkdir dir="bin/hw04" />
		<mkdir dir="test/bin/hw04" />
		<mkdir dir="test/reports/hw04" />		
	</target>

	<target name="compile" depends="init">
		<javac srcdir="src/hw04" destdir="bin" includeantruntime="false" />
		<javac srcdir="test/src/hw04" destdir="test/bin" includeantruntime="false">
			<classpath refid="classpath" />
		</javac>
	</target>

	<target name="test" depends="compile">
		<junitlauncher printSummary="true">
			<classpath refid="classpath" />
			<testclasses outputdir="test/reports/hw04">
				<fileset dir="test/bin">
					<include name="hw04/*Test.class"/>
				</fileset>
				<listener type="legacy-plain" sendSysOut="true"/>
			</testclasses>
		</junitlauncher>
	</target>
	
	<target name="run" depends="test">
	<!--
		<java classname="hw04.StudentFactory"
				classpathref="classpath"  
				fork="true"/>
		<java classname="hw04.StudentStatus"
				classpathref="classpath"  
				fork="true"/>
	-->
	</target>
	
	<target name="clean" depends="run">
		<delete includeemptydirs="true">
			<fileset dir="bin/hw04" includes="**/*"/>
			<fileset dir="test/bin/hw04" includes="**/*" />
		</delete>
	</target>

</project>
